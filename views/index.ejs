<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <div style="width: 20%; border: 1px solid #000; padding: 30px; border-radius: 30px; background-color: rgb(197, 223, 215);">

    <h1 style="text-align: center;">Admin Form</h1><br><br>

    <form action="/" method="post" style="text-align: center;">

      <input type="hidden" name="inputData" value="<%= editid %>">
      Email : <input type="email" name="email" value="<%= input.email %>"> <br><br>
      Password : <input type="password" name="password" value="<%= input.password %>"><br><br><br>

      <input type="submit" style="padding: 3px 20px; background-color: green; color: aliceblue;">

    </form>
  </div>

  <br><br><br>

  <h2>Submitted Data</h2> <br>

  <table border="1" width="40%" style="text-align: center; background-color: blanchedalmond;">
    <tr>
      <th>Email</th>
      <th>Password</th>
      <th>Action</th>
    </tr>

    <% data.map(el=> { %>

      <tr>
        <td>
          <%= el.email %>
        </td>
        <td>
          <%= el.password %>
        </td>
        <td>
          <a href="/?delid=<%= el._id %>"><button style="padding: 2px 10px; background-color: red; color: aliceblue;">Delete</button></a>
          <a href="/?editid=<%= el._id %>"><button style="padding: 2px 10px; background-color: rgb(62, 62, 239); color: aliceblue;">Update</button></a>
        </td>
      </tr>

      <% }) %>

  </table>


</body>

</html>